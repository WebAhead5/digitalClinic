<h1 id='chooseAccount'>Choose account type</h1>

<link href="/styles/register.css" rel="stylesheet">


<div class="registerContainer">

    <div class="doctorpatientfield">
        <div class="column">
            <img id="doctorimg" class="selectedImg" src="/res/icon-doctor.png"></img>
            <span class="caption">Doctor</span>
        </div>
        <div class="column">
            <img id="paitentimg" src="/res/icon-patient.png"></img>
            <span class="caption">Paitent</span>
        </div>

    </div>


    <form method='post' action='/register' id="regForm" class="registerForm">

        <input type='text' id="firstName" class="textField" name='firstName' placeholder='First Name' required />
        <input type='text' class="textField" name='lastName' placeholder='Last Name' required />
        <input type='email' class="textField" name='email' placeholder='Email' />
        <input type='password' class="textField password" name='password' placeholder='Password' required />
        <input type='password' class="textField confirmPassword" name='confirmpassword' placeholder='Confirm Password'
            required />
        <input type='number' class="textField" name='doctorCertificate' id='doctorCertificate'
            placeholder='Doctor Certificate' />
        <input id="submit" class="submitButton" type="submit" value="Submit">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>

    <h1 class="regErr1" id="regErr1"></h1>
    {{#if error}}
    <h1 class="regErr" id="regErr">{{error}}</h1>
    {{/if}}

    <script src="scripts/dom/register.dom.js" type="application/javascript"></script>
</div>