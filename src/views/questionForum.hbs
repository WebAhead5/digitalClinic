<link href="/styles/questionForum.css" rel="stylesheet">

<section >

<!--    show question-->

    {{> entry data=questionData}}

<!--    show answers-->

    {{#each answers}}
        {{> entry data=this}}
    {{/each}}



<form method="post" action="/question/{{questionData.id}}" class="addAnswerForm">
    <input type="text" class="textField" name ='context' placeholder="submit an answer..." required>
    <input type="submit" class="submitButton" value="send">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>




</section>