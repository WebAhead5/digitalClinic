
<section class="formContainer">
  <h1 class="formContainer__title">LOGIN</h1>

  <form class="loginForm" action="/login" method="POST">
    <input class="textField" type="email" name="email" placeholder="Email">
    <input class="textField" type="password" name="password" placeholder="Password">
    <input class="submitButton" type="submit" value="Login">
      <input type="button" onclick="location.href='/forget'" value="reset password"></input>
  </form>   

{{#if error}}


<h1 style="color: red;">{{error}}</h1>




{{/if}}


</section>